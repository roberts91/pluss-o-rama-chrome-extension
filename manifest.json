{
	"name" : "Pluss-o-rama",
	"version": "1.1",
	"manifest_version": 2,
	"description": "Read plus-articles with ease!",
	"content_scripts": [
		{
			"matches": [
				"https://*/*",
				"http://*/*"
			],
			"js": [
				"scripts/vendor/jquery.min.js",
				"scripts/main.js"
			]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": [
		"https://*/*",
		"http://*/*",
		"tabs"
	]
}